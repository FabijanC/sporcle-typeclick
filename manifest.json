{
    "manifest_version": 3,
    "name": "sporcle-typeclick",
    "version": "1.0",
    "description": "Chrome extension which provides typing functionality on clickable Sporcle quizzes",
    "icons": {
        "16": "images/favicon.png",
        "32": "images/favicon.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "css": [
                "style.css"
            ],
            "matches": [
                "https://sporcle.com/*"
            ]
        }
    ]
}
